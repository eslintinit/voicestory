datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/voicestory"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      String          @default(cuid()) @id
  username                String          @unique
  email                   String?         @unique
  fullname                String?
  image                   String?
  bio                     String?
  social                  String?
  blockedCommunities      String?         
  blockedChannels         String?         
  blocked                 String          @default("0")
  owner                   String          @default("0")
  isOnline                Boolean         @default(false)
  lastSeenAt              DateTime        @default(now())
  communitiesOwned        Community[]     @relation(name: "UserCommunityAuthor")
  communitiesFollowed     Community[]     @relation(name: "UserCommunityMember", references: [url])
  channels                Channel[]       @relation(name: "UserChannelAuthor")
  messages                Message[]       @relation(name: "MessageAuthor")
  files                   File[]          @relation(name: "UserFile")
  roles                   Role[]          @relation(name: "UserRole", references: [id])
}

model Community {
  id                      String          @default(cuid()) @id
  name                    String          @unique
  url                     String          @unique
  image                   String?
  description             String?
  isFollowed              Boolean?        @default(false)
  authorUsername          String?
  author                  User?           @relation(name: "UserCommunityAuthor", fields: [authorUsername], references: [username])
  members                 User[]          @relation(name: "UserCommunityMember", references: [username])
  channels                Channel[]       @relation(name: "CommunityChannels")
}

model Channel {
  id                      String          @default(cuid()) @id
  createdAt               DateTime        @default(now())
  name                    String
  url                     String
  description             String?
  communityUrl            String?
  community               Community?      @relation(name: "CommunityChannels", fields: [communityUrl], references: [url])
  authorUsername          String?
  author                  User?           @relation(name: "UserChannelAuthor", fields: [authorUsername], references: [username])
  messages                Message[]       @relation(name: "ChannelMessages")

  @@unique([communityUrl, url])
}

model Message {
  id                      String          @default(cuid()) @id
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
  body                    String?
  channelId               String
  channel                 Channel         @relation(name: "ChannelMessages", fields: [channelId], references: [id])
  authorUsername          String
  author                  User            @relation(name: "MessageAuthor", fields: [authorUsername], references: [username])
  files                   File[]          @relation(name: "FileMessage")
}

model File {
  id                      String          @default(cuid()) @id
  Key                     String          @unique
  createdAt               DateTime        @default(now())
  filename                String
  mimetype                String
  filesize                String?
  encoding                String
  uploaderUsername        String
  uploader                User            @relation(name: "UserFile", fields: [uploaderUsername], references: [username])
  messageId               String?
  message                 Message?        @relation(name: "FileMessage", fields: [messageId], references: [id])
}


model Role {
  id                      String          @default(cuid()) @id
  createdAt               DateTime        @default(now())
  title                   String          @unique
  permissions             String
  color                   String
  users                   User[]          @relation(name: "UserRole", references: [username])
}

